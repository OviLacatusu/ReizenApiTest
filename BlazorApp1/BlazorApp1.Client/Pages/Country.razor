@using Reizen.Domain.DTOs
@using Microsoft.AspNetCore.Authorization

@page "/landen/{NaamLand}"

@inject IHttpClientFactory httpFactory

@attribute [Authorize]

<h3>Land</h3>

<img src="/vlaggen/@(NaamLand).png" />

@if (bestemmingen != null)
{
    <ul>
        @foreach (var bestemming in bestemmingen)
        {
            <li><a href="/bestemmingen/@bestemming.Code">@bestemming.Plaats </a></li>
        }
    </ul>
}
else
{
    <p>Waiting for data...</p>
}

@code {
    [Parameter]
    public string? NaamLand { get; set; }

    private IEnumerable<BestemmingDTO> bestemmingen;

    protected override async Task OnInitializedAsync()
    {
        if (NaamLand != null)
        {
            using var httpClient = httpFactory.CreateClient();
            bestemmingen = await httpClient.GetFromJsonAsync<IEnumerable<BestemmingDTO>>($"api/bestemmingen/{NaamLand}");
        }
    }
}
